<frame width="100%" height="100%" is_transparent="true">
 <horizontal halign="center" valign="center">
  <frame border="black" width="50%">
   <vertical padding="10" halign="center">
    <hslider minimum="0" maximum="100" value="0"
        bar_size="64" step="5" show_value="true" />
    <hslider minimum="0" maximum="10" value="0"
        bar_size="50%" show_value="true" />
    <hslider minimum="0" maximum="3" value="0" show_value="true" />
    <hslider minimum="0" maximum="1" value="0" show_value="true" />
    <hslider minimum="0.0" maximum="1.0" value="0.5" step=".1" show_value="true" />
    <hslider minimum="0" maximum="100" value="0" width="64" height="64" />
   </vertical>
  </frame>

  <frame border="black" height="50%">
   <horizontal padding="10">
    <vslider minimum="0" maximum="100" value="0"
        bar_size="64" step="5" show_value="true" />
    <vslider minimum="0" maximum="10" value="0"
        bar_size="50%" show_value="true" />
    <vslider minimum="0" maximum="3" value="0" show_value="true" />
    <vslider minimum="0" maximum="1" value="0" show_value="true" />
    <vslider minimum="0.0" maximum="1.0" value="0.5" step=".1" show_value="true" />
    <vslider minimum="0" maximum="100" value="0" height="64" width="64" />
   </horizontal>
  </frame>

 </horizontal>
</frame>
